<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>accept</servlet-name>
        <servlet-class>accept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reject</servlet-name>
        <servlet-class>reject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionRequestAccept</servlet-name>
        <servlet-class>TransactionRequestAccept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionRequestReject</servlet-name>
        <servlet-class>TransactionRequestReject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>accept</servlet-name>
        <url-pattern>/accept</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reject</servlet-name>
        <url-pattern>/reject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionRequestAccept</servlet-name>
        <url-pattern>/TransactionRequestAccept</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionRequestReject</servlet-name>
        <url-pattern>/TransactionRequestReject</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
